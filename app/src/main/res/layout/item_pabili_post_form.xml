<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:weightSum="8"
    android:layout_marginBottom="3dp"
    android:background="@drawable/shape_rounded_corners"
    android:backgroundTint="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/et_pabili_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="left"
        android:padding="10dp"
        android:textColor="@color/main_text_color"
        android:textSize="10sp"
        android:fontFamily="@font/lato_regular"
        tools:text="Alaxan FR Capsule (500mg)"
        android:lines="1"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_grey_border_white_bg"
        style="@style/GetExpressEditTextQuantity"
        android:gravity="center"

        android:layout_marginLeft="4dp"
        android:text="1"
        android:textSize="9sp"

        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"

        android:lines="1"
        android:inputType="number"
        />


    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        android:src="@drawable/ic_remove_icon"
        style="@style/GetExpressImageButton"
        />



</LinearLayout>
