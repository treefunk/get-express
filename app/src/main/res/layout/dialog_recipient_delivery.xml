<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    tools:background="@android:color/holo_blue_bright"
    >


    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@id/bg_box"
        app:layout_constraintBottom_toTopOf="@id/bg_box"
        app:layout_constraintHorizontal_bias="1"

        android:background="@null"
        android:src="@drawable/ic_lightbox_close"
        android:scaleType="fitCenter"
        android:layout_marginTop="2dp"
        />



    <View
        android:id="@+id/bg_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintBottom_toBottomOf="@id/btn_submit_for_approval"
        android:background="@android:color/white"
        />




    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/label_recipient_address"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <View
        android:id="@+id/transparent_map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintBottom_toBottomOf="@id/map"

        />

    <TextView
        android:id="@+id/label_recipient_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/GetExpressLabel.MediumBlack.LabelSelectedCustomerRequestSmall"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintBottom_toTopOf="@id/et_recipient_address"

        android:textColor="@color/main_text_color"
        android:text="Recipient Address"
        android:gravity="left"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        />

    <AutoCompleteTextView
        android:id="@+id/et_recipient_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"


        app:layout_constraintTop_toBottomOf="@id/label_recipient_address"
        app:layout_constraintLeft_toLeftOf="@id/label_recipient_address"
        app:layout_constraintRight_toRightOf="@id/label_recipient_address"
        app:layout_constraintBottom_toTopOf="@id/label_location_details"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/main_text_color"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/shape_grey_border"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/label_location_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/GetExpressLabel.LabelSelectedCustomerRequestMedium"
        app:layout_constraintLeft_toLeftOf="@id/label_recipient_address"
        app:layout_constraintRight_toRightOf="@id/label_recipient_address"
        app:layout_constraintTop_toBottomOf="@id/et_recipient_address"
        app:layout_constraintBottom_toTopOf="@id/et_location_details"
        android:layout_marginTop="12dp"

        android:textColor="@color/main_text_color"
        android:text="Location Details"
        android:gravity="left"

        />

    <EditText
        android:id="@+id/et_location_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        app:layout_constraintTop_toBottomOf="@id/label_location_details"
        app:layout_constraintLeft_toLeftOf="@id/label_location_details"
        app:layout_constraintRight_toRightOf="@id/label_location_details"
        app:layout_constraintBottom_toTopOf="@id/label_recipient_name"
        android:background="@drawable/shape_grey_border"
        android:textColor="@color/main_text_color"

        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:textSize="14sp"

        />


    <TextView
        android:id="@+id/label_recipient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/GetExpressLabel.MediumBlack.LabelSelectedCustomerRequestSmall"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintTop_toBottomOf="@id/et_location_details"
        app:layout_constraintBottom_toTopOf="@id/et_recipient_name"
        android:layout_marginTop="12dp"

        android:textColor="@color/main_text_color"
        android:text="Recipient Name"
        android:gravity="left"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <EditText
        android:id="@+id/et_recipient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"


        app:layout_constraintTop_toBottomOf="@id/label_recipient_name"
        app:layout_constraintLeft_toLeftOf="@id/label_recipient_name"
        app:layout_constraintRight_toRightOf="@id/label_recipient_name"
        app:layout_constraintBottom_toTopOf="@id/label_recipient_contact_no"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/main_text_color"
        android:background="@drawable/shape_grey_border"
        android:textSize="14sp"

        />

    <TextView
        android:id="@+id/label_recipient_contact_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/GetExpressLabel.MediumBlack.LabelSelectedCustomerRequestSmall"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintTop_toBottomOf="@id/et_recipient_name"
        app:layout_constraintBottom_toTopOf="@id/et_recipient_contact_no"
        android:layout_marginTop="12dp"

        android:textColor="@color/main_text_color"
        android:text="Recipient Contact Number"
        android:gravity="left"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <EditText
        android:id="@+id/et_recipient_contact_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"


        app:layout_constraintTop_toBottomOf="@id/label_recipient_contact_no"
        app:layout_constraintLeft_toLeftOf="@id/label_recipient_contact_no"
        app:layout_constraintRight_toRightOf="@id/label_recipient_contact_no"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_for_approval"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/main_text_color"
        android:background="@drawable/shape_grey_border"
        android:textSize="14sp"

        />





    <Button
        android:id="@+id/btn_submit_for_approval"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/yellow_200"
        app:layout_constraintTop_toBottomOf="@id/et_recipient_contact_no"
        app:layout_constraintLeft_toLeftOf="@id/map"
        app:layout_constraintRight_toRightOf="@id/map"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="12dp"
        android:textColor="@color/blue_200"
        style="@style/GetExpressLabel"
        android:text="SUBMIT"
        android:textSize="16sp"

        />









</androidx.constraintlayout.widget.ConstraintLayout>