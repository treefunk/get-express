<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Getexpress" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="materialAlertDialogTheme">@style/GetExpressDialog</item>

        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/blue_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/yellow_500</item>
        <item name="android:colorControlActivated">@color/yellow_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/blue_200</item>
        <item name="android:textColorSecondary">@color/blue_200</item>
        <item name="android:textColorSecondaryInverse">@color/blue_500</item>

        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="datepicker_style2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/blue_500</item>
